{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Time Field Type",
  "description": "Schema for time input field type",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "time"
    },
    "label": {
      "oneOf": [
        { "type": "string" },
        { "$ref": "../schemas.json#/definitions/localized" }
      ],
      "description": "Field label",
      "x-example": {
        "en-US": "Delivery Time"
      }
    },
    "placeholder": {
      "type": "string",
      "description": "Field placeholder text",
      "x-example": "Select time"
    },
    "required": {
      "type": "boolean",
      "description": "Whether field is required",
      "x-example": false
    },
    "disabled": {
      "type": "boolean",
      "description": "Whether field is disabled",
      "x-example": false
    },
    "min": {
      "type": "string",
      "pattern": "^\\d{2}:\\d{2}$",
      "description": "Minimum time (HH:MM)",
      "x-example": "09:00"
    },
    "max": {
      "type": "string",
      "pattern": "^\\d{2}:\\d{2}$",
      "description": "Maximum time (HH:MM)",
      "x-example": "17:00"
    },
    "step": {
      "type": "number",
      "description": "Step in seconds",
      "x-example": 900
    },
    "format": {
      "type": "string",
      "enum": ["12", "24"],
      "description": "Time format (12 or 24 hour)",
      "x-example": "12"
    },
    "transformValue": {
      "type": "object",
      "description": "Value transformation configuration",
      "properties": {
        "onLoad": {
          "type": "string",
          "description": "Template expression to transform value on load"
        },
        "onChange": {
          "type": "string", 
          "description": "Template expression to transform value on change"
        },
        "onBlur": {
          "type": "string",
          "description": "Template expression to transform value on blur"
        }
      }
    },
    "onChange": {
      "$ref": "../schemas.json#/definitions/actionsList",
      "description": "Actions to execute when field value changes"
    },
    "onBlur": {
      "$ref": "../schemas.json#/definitions/actionsList",
      "description": "Actions to execute when field loses focus"
    },
    "onFocus": {
      "$ref": "../schemas.json#/definitions/actionsList",
      "description": "Actions to execute when field gains focus"
    }
  },
  "required": ["type"]
}